<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Catergories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Categories', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Category</th>
        </tr>
      </thead>
      <tbody>
        <% @catergies.each do |c| %>
            <%= render 'category',category:c %>
        <% end %>
      </tbody>
    </table>

  </div>

</section>
